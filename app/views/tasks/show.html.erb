<%= link_to tasks_path do %>
  <i class="fas fa-undo-alt back"></i>
<% end %>

<h1><%= @task.title %></h1>

<div class="task">
  <p class="details"><%= @task.details %></p>
</div>

<div class="completed">
  <% if @task.completed == true %>
    <p><i class="fas fa-check-square"></i> Task completed</p>
  <% else %>
    <p><i class="far fa-check-square"></i> Task uncompleted</p>
  <% end %>
</div>

<%= link_to edit_path do %>
  <p>Edit <i class="fas fa-edit"></i></p>
<% end %>
